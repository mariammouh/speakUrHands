<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@application.css" 
            xmlns="http://javafx.com/javafx/20" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.ASLQuizController">

    <VBox alignment="CENTER" spacing="20.0" 
          AnchorPane.bottomAnchor="80.0" 
          AnchorPane.leftAnchor="20.0" 
          AnchorPane.rightAnchor="20.0" 
          AnchorPane.topAnchor="20.0">
        
        <Label fx:id="scoreLabel" text="Score: 0" styleClass="score-label" />
        
        <Label fx:id="questionLabel" text="Question Text" wrapText="true" />
        
        <StackPane fx:id="imagePane" prefHeight="200.0" prefWidth="200.0">
            <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" 
                      pickOnBounds="true" preserveRatio="true" 
                      StackPane.alignment="CENTER" />
        </StackPane>
        
        <HBox fx:id="optionsHBox" alignment="CENTER" 
              prefHeight="100.0" prefWidth="200.0" spacing="20.0" />
        
        <Button fx:id="nextButton" mnemonicParsing="false" 
                onAction="#checkAnswer" text="Next" />
        
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>


    <JFXButton onAction="#goBackToHome" prefHeight="60" prefWidth="60"
               AnchorPane.leftAnchor="20" AnchorPane.bottomAnchor="20">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../application/imagess/angle-left.png"/>
                </image>
            </ImageView>
        </graphic>
    </JFXButton>
</AnchorPane>