<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="800" prefHeight="600"
            fx:controller="controllers.LearnController"
            stylesheets="@application.css">
    <VBox alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../application/imagess/icon.png"/>
            </image>
        </ImageView>
        <Label text="If you feel like you need to challenge your knowledge about sign language, try to answer this quiz."
               wrapText="true"
               alignment="CENTER"
               textAlignment="CENTER"
               styleClass="label" />
        <Button text="Start Learning" onAction="#startLearning"/>
    </VBox>
    <JFXButton onAction="#goBackToHome" prefHeight="60" prefWidth="60"
               AnchorPane.leftAnchor="20" AnchorPane.bottomAnchor="20">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../application/imagess/angle-left.png"/>
                </image>
            </ImageView>
        </graphic>
    </JFXButton>
</AnchorPane>